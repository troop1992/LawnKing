<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="App2.MainPage">

    <StackLayout VerticalOptions="Center" Margin="20">
        <Label Text="LawnKing"
               Style="{StaticResource HeadingLabel}"
               HorizontalOptions="Center"/>
        <Image x:Name="MainPageImage"
               Aspect="AspectFit"
               HorizontalOptions="FillAndExpand"
               HeightRequest="200"
               Margin="20"/>
        <Entry x:Name="EmailIDEntry"
                   Placeholder="Email ID" Keyboard="Email"
                   />
        <Entry x:Name="PasswordEntry" IsPassword="True" Placeholder="Password"
                   />
        <Button x:Name="LoginButton"
                    Margin="0,50,0,0"
                    Text="Log in"
                    Style="{StaticResource PrimaryButton}"/>
        <Button x:Name="RegisterButton"
                    Text="Register"
                HorizontalOptions="End"
                BackgroundColor="Transparent"
                TextColor="{StaticResource PrimaryColor}"/>
    </StackLayout>

</ContentPage>
